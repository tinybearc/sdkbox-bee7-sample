<?xml version="1.0" encoding="utf-8"?>
<com.bee7.gamewall.GameWallHeader xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gamewall_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bee7_gamewall_header_height"
    android:background="@drawable/bee7_header_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/gamewallHeaderButtonClose"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bee7_gamewall_header_text_horizontal_margin"
        android:visibility="invisible">

        <com.bee7.gamewall.views.AutoResizeSingleLineTextView
            android:id="@+id/gamewallHeaderTitleView"
            style="@style/bee7_gamewall_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/bee7_header_title" />

        <ImageView
            android:id="@+id/gamewallHeaderIconReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/bee7_gamewall_header_icon_margin"
            android:adjustViewBounds="true"
            android:src="@drawable/bee7_icon_reward" />
    </LinearLayout>

    <com.bee7.gamewall.views.Bee7ImageView
        android:id="@+id/gamewallHeaderButtonClose"
        style="@style/bee7_gamewallHeaderCloseIcon"
        android:layout_width="@dimen/bee7_gamewall_header_close_button_size"
        android:layout_height="@dimen/bee7_gamewall_header_close_button_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/bee7_gamewall_header_text_horizontal_margin"
        android:scaleType="fitXY" />

</com.bee7.gamewall.GameWallHeader>