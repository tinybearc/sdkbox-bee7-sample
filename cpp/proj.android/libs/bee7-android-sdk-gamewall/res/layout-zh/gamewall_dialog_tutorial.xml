<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bee7_dialog_background_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/bee7_dialog_min_width"
        android:minHeight="@dimen/bee7_dialog_min_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/bee7_dialog_margin_horizontal"
        android:layout_marginRight="@dimen/bee7_dialog_margin_horizontal"
        android:background="@drawable/bee7_video_dialog_bg"
        android:paddingLeft="@dimen/bee7_dialog_padding"
        android:paddingStart="@dimen/bee7_dialog_padding"
        android:paddingRight="@dimen/bee7_dialog_padding"
        android:paddingEnd="@dimen/bee7_dialog_padding"
        android:paddingTop="@dimen/bee7_dialog_padding_top"
        android:paddingBottom="@dimen/bee7_dialog_padding"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/bee7_dialog_tutorial_text_playgames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bee7_dialog_tutorial_playgames"
            android:textColor="@color/bee7_text_color"
            android:textSize="@dimen/bee7_dialog_text_size"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_margin="@dimen/bee7_dialog_item_padding"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bee7_dialog_icon_arrow_size"
            android:src="@drawable/bee7_arrow"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/bee7_dialog_item_padding"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/bee7_dialog_tutorial_part1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bee7_dialog_tutorial_part1"
                android:textColor="@color/bee7_text_color"
                android:textSize="@dimen/bee7_dialog_text_size"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/bee7_dialog_tutorial_icon_publisher"
                android:layout_width="@dimen/bee7_dialog_publisher_icon_size"
                android:layout_height="@dimen/bee7_dialog_publisher_icon_size"
                android:layout_margin="@dimen/bee7_dialog_item_padding"/>

            <TextView
                android:id="@+id/bee7_dialog_tutorial_part2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bee7_dialog_tutorial_part2"
                android:textColor="@color/bee7_text_color"
                android:textSize="@dimen/bee7_dialog_text_size"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/bee7_dialog_tutorial_icon_virtualcurrency"
                android:layout_width="@dimen/bee7_dialog_icon_vc_size"
                android:layout_height="@dimen/bee7_dialog_icon_vc_size"
                android:layout_margin="@dimen/bee7_dialog_item_padding"/>

            <TextView
                android:id="@+id/bee7_dialog_tutorial_part3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bee7_dialog_tutorial_part3"
                android:textColor="@color/bee7_text_color"
                android:textSize="@dimen/bee7_dialog_text_size"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bee7_dialog_tutorial_text_button"
            style="@style/bee7_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bee7_btn_blank_selector"
            android:text="@string/bee7_ok"
            android:textSize="@dimen/bee7_dialog_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/bee7_dialog_item_margin"
            android:includeFontPadding="false"/>

    </LinearLayout>

</RelativeLayout>